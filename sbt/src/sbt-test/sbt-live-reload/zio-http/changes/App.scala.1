import zio._
import zio.http._

object GreetingServer extends ZIOAppDefault {
  val routes =
    Routes(
      Method.GET / "greet_reloaded" -> handler { (req: Request) =>
        Response.text(s"World Hello")
      },
      Method.GET / "health" -> handler { (req: Request) =>
        Response.ok
      }
    )
  def run = Server.serve(routes).provide(Server.defaultWithPort(me.seroperson.BuildInfo.port))
}
